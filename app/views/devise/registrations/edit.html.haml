%h3 Edit #{resource_name.to_s.humanize}

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!

  .field
    .col-md-4.text-right.form-group
      = f.label :email

    .col-md-6.form-group
      = f.email_field :email, class: 'form-control', readonly: true


  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %span Currently waiting confirmation for: #{resource.unconfirmed_email}


  .field
    .col-md-4.text-right.form-group
      = f.label :password
      %br
      %i (leave blank if you don't want to change it)

    .col-md-6.form-group
      = f.password_field :password, autocomplete: 'off', class: 'form-control'


  .field
    .col-md-4.text-right.form-group
      = f.label :password_confirmation

    .col-md-6.form-group
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'


  .field
    .col-md-4.text-right.form-group
      = f.label :current_password
      %br
      %i (we need your current password to confirm your changes)

    .col-md-6.form-group
      = f.password_field :current_password, autocomplete: 'off', class: 'form-control'


  .actions.col-md-12.text-right
    = f.submit 'Update', class: 'btn btn-md btn-primary'

.col-md-12.text-left
  %hr
  %h3 Cancel my account

  %p
    Unhappy?
    = button_to 'Cancel my account', registration_path(resource_name), |
        class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' }, method: :delete
